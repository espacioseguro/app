<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:actionButtonStyle">@string/navigation_drawer_open</item>
        <item name="actionButtonStyle">@string/navigation_drawer_close</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    
    <!--SWITCH COLOR-->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#47B</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#000
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#47D
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

</resources>
