<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo_pop_up_alarma"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/fondo_pop_up_alarma"
        android:gravity="center">



        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/escudo_lobo_negativo"/>

        <EditText
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/add_service_code"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="CÃ³digo de Servicio"
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:textColorHint="#fff"
            android:singleLine="true"
            android:background="@drawable/input_layout_blanco">
            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_new_code_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blanco"
                android:textColor="@color/azul_app"
                android:layout_weight="1"
                android:text="Agregar"/>

            <Button
                android:id="@+id/btn_new_code_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blanco"
                android:textColor="@color/azul_app"
                android:layout_weight="1"
                android:text="Cancelar"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>