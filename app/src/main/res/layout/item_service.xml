<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="15sp"
    android:layout_marginBottom="4sp"
    android:layout_marginTop="3sp"
    android:layout_marginStart="3sp"
    android:layout_marginEnd="3sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_service_name"
            android:textSize="20sp"
            android:textColor="@color/cardview_light_background"
            android:gravity="center"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_service_code"
            android:textSize="20sp"
            android:textColor="@color/cardview_light_background"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_service_edit"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:tint="@color/azul_app"
                android:src="@drawable/edit_alarm"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_service_delete"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:tint="@color/azul_app"
                android:src="@drawable/delete_user"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_service_copy"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:tint="@color/azul_app"
                android:src="@drawable/icon_copy"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>