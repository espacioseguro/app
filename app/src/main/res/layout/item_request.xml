<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="15sp"
    android:layout_marginBottom="4sp"
    android:layout_marginTop="3sp"
    android:layout_marginStart="3sp"
    android:layout_marginEnd="3sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_request_name"
            android:textSize="20sp"
            android:layout_weight="5"
            android:textColor="@color/cardview_light_background"
            android:gravity="center"
            android:background="#00FFFFFF"/>

        <ImageView
            android:id="@+id/item_acept_request"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/button_entrar"
            android:tint="#fff"
            android:src="@drawable/accept_request" />

        <ImageView
            android:id="@+id/item_delete_request"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/button_entrar"
            android:tint="#fff"
            android:src="@drawable/delete_request" />

    </LinearLayout>
</android.support.v7.widget.CardView>