        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_service_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
