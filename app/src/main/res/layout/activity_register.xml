<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.solution.tecno.espacioseguro.RegisterActivity"
    android:background="#aaa">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_positivo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:textColor="#fff"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:background="@drawable/input_layout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:layout_weight="4"
                    android:textColor="#fff"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:background="@drawable/input_layout"/>
                <ImageView
                    android:id="@+id/register_show_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/visible_password"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Celular"
                android:textColor="#fff"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:background="@drawable/input_layout"/>

            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:hint="Nombre y Apellido"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:background="@drawable/input_layout"/>

            <Button
                android:id="@+id/register_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Registrar"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:background="@drawable/button_layout" />

            <CheckBox
                android:layout_marginTop="15dp"
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deseo recibir información y promociones"
                android:textColor="@color/textColorWhite"/>

            <CheckBox
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="He leído y acepto los términos y condiciones"
                android:textColor="@color/textColorWhite"/>

            <com.facebook.login.widget.LoginButton
                    android:id="@+id/btnfb"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:elevation="10dp"
                    android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


