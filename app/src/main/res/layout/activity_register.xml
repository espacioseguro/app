<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RegisterActivity"
    android:background="@drawable/fondo_escudo">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_positivo"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAR CUENTA"
        android:textSize="48px"
        android:textStyle="bold"
        android:textColor="#2E52A7"
        android:gravity="center"/>

    <ScrollView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_username"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:textColor="#3F77BE"
                android:textColorHint="#3F77BE"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:background="@drawable/input_layout"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="ContraseÃ±a"
                    android:layout_weight="4"
                    android:textColor="#3F77BE"
                    android:textColorHint="#3F77BE"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:background="@drawable/input_layout"/>
                <ImageView
                    android:id="@+id/register_show_password"
                    android:layout_width="50px"
                    android:layout_weight="1"
                    android:layout_height="50px"
                    android:src="@drawable/visible_password"
                    android:layout_gravity="center_horizontal"
                    android:tint="#3F77BE"/>
            </LinearLayout>

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Celular"
                android:textColor="#3F77BE"
                android:textColorHint="#3F77BE"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:background="@drawable/input_layout"/>

            <EditText
                android:id="@+id/register_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#3F77BE"
                android:hint="Nombre y Apellido"
                android:textColorHint="#3F77BE"
                android:inputType="textCapWords"
                android:imeOptions="actionDone"
                android:background="@drawable/input_layout"/>

            <CheckBox
                android:layout_marginTop="15dp"
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#3F77BE"
                android:text="@string/information"
                android:textColor="#000"/>

            <CheckBox
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#3F77BE"
                android:text="@string/termn_condition"
                android:textColor="#000"/>
            <Button
            android:id="@+id/register_button"
            style="?android:textAppearanceSmall"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Registrar"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/button_entrar" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


